@page "/contact"


<MudForm @ref="@form" ValidationDelay="0">
    <MudTextField @bind-Value="@contactFormDTO.FirstName" Label="First Name" Required="true" />
    <MudTextField @bind-Value="@contactFormDTO.LastName" Label="Last Name" Required="true" />
    <MudTextField @bind-Value="@contactFormDTO.Email" Label="Email" Required="true" />
    <MudTextField @bind-Value="@contactFormDTO.Phone" Label="Phone or Cellphone" />
    <MudTextField @bind-Value="@contactFormDTO.Message" Label="Message" Required="true" Lines="4" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await HandleSubmit())">@Localizer["Send"]</MudButton>
</MudForm>


