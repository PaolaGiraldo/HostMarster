    <MudCarouselItem Transition="transition" Color="@Color.Transparent">

        <div class="d-flex" style="height:100%; display: flex; justify-content: center; align-items: center;">
            <MudImage Src="images/lobby.jpg" Class="mb-3" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition" Color="@Color.Transparent">

        <div class="d-flex" style="height:100%; display: flex; justify-content: center; align-items: center;">
            <MudImage Src="images/pool.jpg" Class="mb-3" />
