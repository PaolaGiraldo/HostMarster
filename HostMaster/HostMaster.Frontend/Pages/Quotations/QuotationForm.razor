﻿<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />
    <MudPaper Class="pa-4" Elevation="4">
    <MudText Typo="Typo.h6">Solicitar Cotización de Reserva</MudText>

    <MudForm @ref="quotationForm" OnValidSubmit="HandleSubmit">
        <MudGrid>
            <!-- Campos del formulario (los mismos que antes) -->
            <MudItem xs="12" sm="6">
                <MudTextField Label="Nombre" @bind-Value="QuotationDTO.Name" Required="true" />
            </MudItem>

            <MudItem xs="12" sm="6">
                <MudTextField Label="Correo Electrónico" @bind-Value="QuotationDTO.Email" Required="true" Type="email" />
            </MudItem>

            <MudItem xs="12" sm="6">
                <MudTextField Label="Teléfono" @bind-Value="QuotationDTO.Phone" Required="true" />
            </MudItem>

            <MudItem xs="12" sm="6">
                <MudDatePicker Label="Fecha de Inicio" @bind-date="QuotationDTO.StartDate" Required="true" />
            </MudItem>

            <MudItem xs="12" sm="6">
                <MudDatePicker Label="Fecha de Fin" @bind-date="QuotationDTO.EndDate" Required="true" />
            </MudItem>

            <MudItem xs="12" sm="6">
                <MudNumericField Label="Número de Adultos" @bind-Value="QuotationDTO.Adults" Min="1" Required="true" />
            </MudItem>

            <MudItem xs="12" sm="6">
                <MudNumericField Label="Número de Niños" @bind-Value="QuotationDTO.Children" Min="0" />
            </MudItem>

            <MudItem xs="12" sm="6">
                <MudSelect Label="@Localizer["RoomType"]"
                           @bind-Value="@QuotationDTO.RoomType"
                           For="@(() => QuotationDTO.RoomType)"
                           Class="mb-4">
                    @foreach (var room in _roomTypes)
                    {
                        <MudSelectItem Value="room">@Localizer[room]</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>

            <MudItem xs="12">
                <MudTextField Label="Observaciones" @bind-Value="QuotationDTO.Observations" Lines="4" Multiline="true" />
            </MudItem>

            <MudItem xs="12">
                <MudButton Type="Submit" Color="Color.Primary" Variant="Variant.Filled">Solicitar Cotización</MudButton>
            </MudItem>
        </MudGrid>
    </MudForm>
    </MudPaper>

 

