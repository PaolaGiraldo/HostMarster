﻿<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />

<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudTextField  Label="@Localizer["Accommodation"]"
                  @bind-Value="@ReservationDTO.AccommodationId"
                  For="@(() => ReservationDTO.AccommodationId)"
                  Class="mb-4" />

    <MudTextField Label="@Localizer["RoomId"]"
                  @bind-Value="@ReservationDTO.RoomId"
                  For="@(() => ReservationDTO.RoomId)"
                  Class="mb-4" />

    <MudDatePicker Label="@Localizer["StartDate"]"
                  @bind-Date ="@ReservationDTO.StartDate"
                  For="@(() => ReservationDTO.StartDate)"
                  Class="mb-4" />

    <MudDatePicker Label="@Localizer["EndDate"]"
                  @bind-Date="@ReservationDTO.EndDate"
                  For="@(() => ReservationDTO.EndDate)"
                  Class="mb-4" />

    <MudNumericField Label="@Localizer["NumberOfGuests"]"
                     Min="1" Max="100"
                  @bind-Value="@ReservationDTO.NumberOfGuests"
                  For="@(() => ReservationDTO.NumberOfGuests)"
                  Class="mb-4" />

    <MudTextField Label="@Localizer["Customer"]"
                  @bind-Value="@ReservationDTO.CustomerDocument"
                  For="@(() => ReservationDTO.CustomerDocument)"
                  Class="mb-4" />

    <MudTextField Label="@Localizer["ReservationState"]"
                  @bind-Value="@ReservationDTO.ReservationState"
                  For="@(() => ReservationDTO.ReservationState)"
                  Class="mb-4" />


    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.ArrowBack"
               Color="Color.Info"
               OnClick="ReturnAction">
        @Localizer["Return"]
    </MudButton>

    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.Check"
               Color="Color.Primary"
               ButtonType="ButtonType.Submit">
        @Localizer["SaveChanges"]
    </MudButton>
</EditForm>


